<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/custom_background">


    <TextView
        android:id="@+id/itemRecyclerViewVersionName"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="153dp"
        android:gravity="center"
        android:textColor="@color/text_color_item"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemRecyclerViewVersionCode"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@tools:sample/cities" />


    <TextView
        android:id="@+id/itemRecyclerViewVersionCode"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginEnd="78dp"
        android:gravity="center"
        android:textColor="@color/text_color_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemRecyclerViewVersionName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemRecyclerViewVersionName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24" />


</androidx.constraintlayout.widget.ConstraintLayout>
